{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "jsx": "react-native",               // ✅ react-native instead of react-jsx
    "types": ["expo", "react", "react-native", "jest"],  // ✅ Explicitly include these
    "paths": {
      "@/*": ["src/*"]
    },
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
